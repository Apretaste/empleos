<form class="ap-form" action="TRABAJOS SAVEJOB">
	<div class="row">
		<div class="col s12">
			<h1>Nueva oferta</h1>
			<p>Cree una nueva oferta laboral para atraer posibles trabajadores interesados.</p>

			<!-- title -->
			<div class="input-field">
				<textarea id="title" name="title" maxlength="140" class="remainder materialize-textarea"></textarea>
				<label for="title">Escriba un título (<span>0</span>/140)</label>
			</div>

			<!-- description -->
			<div class="input-field">
				<textarea id="desc" name="desc" maxlength="1000" class="remainder materialize-textarea"></textarea>
				<label for="desc">Describa su trabajo (<span>0</span>/1000)</label>
			</div>

			<!-- categories -->
			<div class="input-field">
				<select id="category" name="category" class="materialize-select">
					<option value=""></option>
					<% for(var item in categories) { %>
						<option value="<%= item %>"><%= categories[item] %></option>
					<% } %>
				</select>
				<label for="category">Escoja una categoría</label>
			</div>

			<!-- email -->
			<div class="input-field">
				<input id="email" name="email" type="email"/>
				<label for="email">Su correo electrónico</label>
			</div>
		</div>
	</div>

	<div class="bottom-space"></div>

	<!-- BUTTON -->
	<div id="btn" class="fixed-action-btn">
		<a class="btn-floating waves-effect waves-light grey second" href="#!" onclick="apretaste.send({'command':'TRABAJOS OFERTAS'})">
			<i class="material-icons">arrow_back</i>
		</a>
		<button type="submit" class="btn-floating btn-large waves-effect waves-light green">
			<i class="material-icons">save</i>
		</button>
	</div>
</form>